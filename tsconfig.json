{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "allowJs": false,
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "./src/tester/*"
    ],
    "include": [
        "./src/**/*",
        "./src/tester/*.*"
    ]
}